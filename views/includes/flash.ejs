<% if (succMsg && succMsg.length) { %>
<div
  class="alert alert-success alert-dismissible col-6 offset-2"
  role="alert"
>
  <%= succMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
<% if (errorMsg && errorMsg.length) { %>
<div
  class="alert alert-danger alert-dismissible col-6 offset-2"
  role="alert"
>
  <%= errorMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
